/* pages/login/login.wxss */
.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 80rpx; /* Reduced top padding */
  box-sizing: border-box;
  height: 100vh;
}

.logo-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx; /* Reduced bottom margin */
}

.logo {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 20rpx;
  /* Add a default background or placeholder if the image might be missing */
  background-color: #eee; 
  border-radius: 10rpx; /* Optional: add slight rounding */
}

.title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

form {
  width: 100%;
  max-width: 600rpx; /* Limit form width for better readability */
}

.input-group {
  margin-bottom: 40rpx;
}

.input-item {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  padding: 0 20rpx;
  margin-bottom: 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  background-color: #11cd6e; /* Use theme color */
  color: #fff;
}

.toggle-text {
  margin-top: 30rpx;
  text-align: center;
  font-size: 26rpx;
  color: #666;
} 