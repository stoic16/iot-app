/* pages/alertList/alertList.wxss */
.alert-list-container {
  padding-bottom: 30rpx;
}

/* 筛选条 */
.filter-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.filter-item {
  display: flex;
  align-items: center;
}

.picker {
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
}

.filter-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
}

.switch-label {
  margin-left: 15rpx;
  font-size: 28rpx;
  color: #333;
}

.loading-indicator,
.error-message,
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 100rpx;
  color: #999;
}

.error-message button {
  margin-top: 20rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  margin-bottom: 20rpx;
}

/* 告警卡片 */
.alert-list {
  width: 100%;
}

.alert-card {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  border-left: 10rpx solid; /* Severity indicator */
}

.severity-info { border-left-color: #909399; }
.severity-warning { border-left-color: #e6a23c; }
.severity-critical { border-left-color: #f56c6c; }

.card-content {
  padding: 24rpx 30rpx;
}

.alert-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.severity-badge {
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  color: #fff;
  text-transform: uppercase;
}
.severity-info .severity-badge { background-color: #909399; }
.severity-warning .severity-badge { background-color: #e6a23c; }
.severity-critical .severity-badge { background-color: #f56c6c; }

.alert-time {
  font-size: 24rpx;
  color: #999;
}

.alert-message {
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 15rpx;
}

.alert-details {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.detail-item .label {
  color: #999;
  margin-right: 10rpx;
}

.card-actions {
  padding: 15rpx 30rpx;
  text-align: right;
  border-top: 1rpx solid #eee;
}

.ack-button {
  background-color: #11cd6e !important; /* Override default mini button styles if needed */
  color: #fff !important;
  border-radius: 8rpx;
}

.acknowledged-tag {
  padding: 15rpx 30rpx;
  text-align: right;
  font-size: 26rpx;
  color: #999;
  border-top: 1rpx solid #eee;
} 