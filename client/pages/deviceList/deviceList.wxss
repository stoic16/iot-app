/* pages/deviceList/deviceList.wxss */
.device-list-container {
  padding-bottom: 30rpx;
}

.loading-indicator,
.error-message,
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 100rpx;
  color: #999;
}

.error-message button {
  margin-top: 20rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  margin-bottom: 20rpx;
}

.device-list {
  width: 100%;
}

.device-card {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.device-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.device-status {
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  color: #fff;
}

.status-online {
  background-color: #11cd6e;
}

.status-offline {
  background-color: #aaa;
}

.status-error {
  background-color: #f56c6c;
}

.status-maintenance {
  background-color: #e6a23c;
}

.card-body {
  padding: 20rpx 30rpx;
}

.info-item {
  display: flex;
  font-size: 26rpx;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.label {
  color: #999;
  width: 120rpx;
  flex-shrink: 0;
}

.value {
  color: #333;
  flex-grow: 1;
  word-break: break-all;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  font-size: 24rpx;
  color: #999;
  border-top: 1rpx solid #eee;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
} 